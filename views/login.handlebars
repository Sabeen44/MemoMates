<div class="card"  >
  <div class="card-header" style="background-color: rgb(45, 108, 45)" >
    <h2>Login </h2>
  </div>
  <form id="login-form" class="card-body">
    <div>
      <label for="email-input-login">Email</label>
      <input type="text" id="email-input-login" />
    </div>
    <div>
      <label for="password-input-login" class="form-label">Password</label>
      <input type="password" id="password-input-login" />
    </div>
    <button
      type="submit"
      id="login-btn"
      class="btn btn-secondary btn-lg"
    >Login</button>
    <a type="button" class="btn btn-secondary btn-lg" href="/signup">Sign up</a>
  </form>
</div>

<script src="/js/login.js"></script>