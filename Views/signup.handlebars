<div class="card">
  <div class="card-header">
    <h2>Sign Up</h2>
  </div>
    <form id="signup-form" class="card-body">
      <div>
        <label for="email-input-signup">Email</label>
        <input type="text" id="email-input-signup" />
      </div>
      <div>
        <label for="password-input-signup">Password</label>
        <input type="password" id="password-input-signup" />
      </div>
      <button type="submit" 
      id="signup-btn" 
      class="btn btn-secondary btn-lg"
       >Signup</button>
      <a type="button" class="btn btn-secondary btn-lg" href="/login">Login instead</a>
    </form>
  </div>
  
<script src="/js/signup.js"></script>